# Database
# PostgreSQL connection string (required)
DATABASE_URL="postgresql://user:password@localhost:5432/warlynx"

# NextAuth
# Application URL (required)
NEXTAUTH_URL="http://localhost:3000"
# Secret key for NextAuth (required) - generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# Email Provider (for passwordless authentication)
EMAIL_SERVER_HOST="smtp.example.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@example.com"
EMAIL_SERVER_PASSWORD="your-email-password"
EMAIL_FROM="noreply@warlynx.com"

# OpenAI
# OpenAI API key for GPT-4 and DALL-E (required)
OPENAI_API_KEY="sk-..."

# Storage - Configure at least ONE of the following:

# Option 1: AWS S3
AWS_ACCESS_KEY_ID="..."
AWS_SECRET_ACCESS_KEY="..."
AWS_REGION="us-east-1"
AWS_S3_BUCKET="warlynx-images"

# Option 2: Supabase Storage
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_SERVICE_ROLE_KEY="..."
NEXT_PUBLIC_SUPABASE_ANON_KEY="..."

# Redis (optional, for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# Rate Limiting (optional, defaults shown)
RATE_LIMIT_IMAGE_GENERATION="3"  # per hour
RATE_LIMIT_AI_REQUESTS="100"     # per hour

# Application
# Public application URL (required)
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# OAuth Providers (optional)
# Google OAuth
GOOGLE_CLIENT_ID="..."
GOOGLE_CLIENT_SECRET="..."

# Discord OAuth
DISCORD_CLIENT_ID="..."
DISCORD_CLIENT_SECRET="..."
